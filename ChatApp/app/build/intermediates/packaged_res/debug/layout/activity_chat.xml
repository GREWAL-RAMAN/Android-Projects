<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Chat">
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/chatRecylerView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/chatLinear"
        android:paddingBottom="10dp"
        />
    <LinearLayout
        android:background="#7A1CE4"
        android:id="@+id/chatLinear"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="20"
        android:gravity="center"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chatRecylerView">
        <EditText
            android:id="@+id/chatText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/enter_the_message"
            android:textColorHint="#A6A5A5"
            android:textColor="#fff"
            android:backgroundTint="#fff"
            android:layout_weight="18"
            />
<ImageView
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:clickable="true"
    android:id="@+id/sendButton"
    android:layout_weight="2"
    android:src="@drawable/send_button"
    />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>